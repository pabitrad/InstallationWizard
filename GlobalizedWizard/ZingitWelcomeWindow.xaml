<Window 
  x:Class="ZingitWizard.ZingitWelcomeWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:res="clr-namespace:ZingitWizard.Resources"
  Width="800" Height="480"
  Background="LightCyan"
  WindowStyle="None"
  WindowStartupLocation="CenterScreen"
  >
    <StackPanel>
        <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="40" TextWrapping="NoWrap" Text="{x:Static res:Strings.ZingitInstallation_Title}">
        </TextBlock>
        
        <Separator Name="MySeparator" 
               Height="4"
               Width="Auto"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Bottom"                   
               Background="Black" />
        
        <Grid Height="75" Margin="0,97,2,97" Background="Gray">
            <TextBlock x:Name="zingitTextBlock" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" TextWrapping="NoWrap"  Text="Start new Installation / Modify Existing Installation" Margin="150,22.514,189,25" Width="480"/>
        </Grid>
        <Grid>
            <Image Source="Resources/Images/ZingitLogoLarge.png" Stretch="None" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</Window>