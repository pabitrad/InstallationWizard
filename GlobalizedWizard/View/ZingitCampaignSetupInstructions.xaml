<Window x:Class="ZingitWizard.View.ZingitCampaignSetupInstructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZingitWizard.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ZingitCampaignSetupInstructions" Width="540">

        <Window.Resources>
            <BitmapImage x:Key="campaignSetupImageInstructions">pack://application:,,,/Resources/Images/Campaign_Instructions.jpg</BitmapImage>
        </Window.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Image Source="{StaticResource campaignSetupImageInstructions}" Stretch="None" >
        </Image>
    </ScrollViewer>
</Window>
