<Window x:Class="ZingitWizard.View.ZingitDropAndGoMappingInstruction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZingitWizard.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Drop And Go Mapping Instruction">
    <Window.Resources>
        <BitmapImage x:Key="dropAndGoImageInstructions">pack://application:,,,/Resources/Images/Mapping_Instructions.jpg</BitmapImage>
    </Window.Resources>
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Image Source="{StaticResource dropAndGoImageInstructions}" Stretch="None" >
        </Image>
    </ScrollViewer>
</Window>
